<h1>Simple Drawing Program</h1>

<h2>Log In To Your Account </h2>

  <%= form_tag '/login', method: :post, :class => "form-horizontal", :role => 'form' do %>
  <div class="form-group">
    <%= label_tag :username, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>


<h2>Create An Account</h2>



<%= form_for @user , :html => {:class => "form-horizontal"} do |f| %>



<%= f.label :username, value: "Username (required)" %>
<%= f.text_field :username , class: "form-control", placeholder: "Username"%>
<br />


<%= f.label :email, value: "Email" %>
<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
<br />

<%= f.label :password, value: "Password (required to save your drawings)" %>
<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
<br />


<%= f.label :password_confirmation, value: "Confirm Your Password (required)" %>
<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
<br />


<%= f.submit "Create Your Account", class: "btn btn-success"%>
<br />
<br />
<br />


<a href="/" class="btn btn-success" >Forget It I Just Want To Play</a>
<% end %>
